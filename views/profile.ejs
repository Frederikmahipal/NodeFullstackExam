<%- include ('./partials/nav') %>
    <%- include ('./partials/messages') %>

        <div class="container mt-5">
            <div class="row">
                <div class="col-md-4 text-center white-text">
                    <h2 class="mt-3">
                        <%= user.name %>
                    </h2>
                    <p>Followers: <%= user.followers.length %></p>
                    <p>Following: <%= user.following.length %></p>
                </div>
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Edit Profile</div>
                        <div class="card-body">
                            <form action="/users/edit/<%= user._id %>" method="POST">
                                <input type="hidden" name="_method" value="PUT">
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <input type="text" class="form-control" id="name" name="name"
                                        value="<%= user.name %>">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" id="email" name="email"
                                        value="<%= user.email %>">
                                </div>
                                <div class="form-group">
                                    <label for="newPassword">New Password</label>
                                    <input type="password" class="form-control" id="newPassword" name="newPassword">
                                </div>
                                <div class="form-group">
                                    <label for="currentPassword">Current Password</label>
                                    <input type="password" class="form-control" id="currentPassword"
                                        name="currentPassword">
                                </div>
                                <button type="submit" class="btn btn-primary form-control">Save Changes</button>
                                </form>

                                <div class="card my-5">
                                    <div class="card-header">Confirm account deletion</div>
                                    <div class="card-body">
                                        <form action="/users/delete" method="POST">
                                            <label for="email">Enter your current email:</label>
                                            <input type="email" class="form-control" id="email" name="email">
                                            <label for="password">Enter your current password:</label>
                                            <input type="password" class="form-control" id="password" name="password">
                                            <input type="submit" class="btn btn-danger form-control" value="Confirm deletion">
                                        </form>
                                    </div>
                                </div>
                                
                                <style>
                                    body {
                                        background-color: #34568B;
                                    }

                                    .white-text {
                                        color: white;
                                    }
                                </style>